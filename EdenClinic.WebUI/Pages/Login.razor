@inherits Component
<link href="/css/login/util.css" rel="stylesheet" />
<link href="/css/login/main.css" rel="stylesheet" />
<div class="container-login100" style="background-image: url('/css/login/images/bg-01.jpg');">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
        <EditForm Model="model" OnValidSubmit="LoginSubmit" class="login100-form validate-form">
            <DataAnnotationsValidator />
            <span class="login100-form-title p-b-37">
                Sign In
            </span>

            <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
                <MatTextField Required="true" Type="email" @bind-Value="model.Email" Label="Email" TValue="string" Icon="perm_identity" />
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
                <MatTextField Required="true" Type="password" @bind-Value="model.Password" Label="Password" TValue="string" Icon="lock" />
                <span class="focus-input100"></span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Sign In
                </button>
            </div>

