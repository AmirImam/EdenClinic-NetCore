<MatNavSubMenu @bind-Expanded="@navSubMenuOpenState">
    <MatNavSubMenuHeader>
        <MatNavItem AllowSelection="false"><MatIcon Icon="@Icon"></MatIcon>&nbsp; @Title</MatNavItem>
    </MatNavSubMenuHeader>
    <MatNavSubMenuList>
        @ChildContent
    </MatNavSubMenuList>
</MatNavSubMenu>
@code{ 
    bool navSubMenuOpenState;
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}